<!--     	        android:layout_alignRight="@+id/textViewUsername" -->
<!--     	        android:layout_below="@+id/textViewUsername" -->
<!--     	        android:layout_marginTop="22dp" /> -->

    <Button
        android:id="@+id/stopbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startbutton"
        android:layout_below="@+id/startbutton"
        android:layout_marginTop="36dp"
        android:text="Stop" />

    <Button
        android:id="@+id/uploadbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stopbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:text="Upload" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/uploadbutton"
        android:layout_alignLeft="@+id/uploadbutton"
        android:layout_marginBottom="15dp"
        android:text="Press start to record activity..." />
    
</RelativeLayout>
